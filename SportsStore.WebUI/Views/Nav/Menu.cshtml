@model IEnumerable<string>

<div class="pull-right">
</div>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link
                        , new
                            {
                                controller = "Product",
                                action = "List",
                                category = link,
                                page = 1
                            }
                        , new
                        {
                            @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
                        })
}

@Html.RouteLink("Your Shopping Cart", new { controller = "Cart", action = "Index", returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-block btn-success btn-lg" })

